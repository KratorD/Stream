<div class="container-fluid">
    <div class="row">
        <h3>
            <span class="fa fa-wrench"></span>
            {% trans %}Settings{% endtrans %}
            {{ pageSetVar('title', 'Settings'|trans) }}
        </h3>

        {{ form_start(form) }}
		{{ form_errors(form) }}
		{{ form_row(form.clientId) }}
		{{ form_row(form.clientSecret) }}
		{{ form_row(form.thumbBlockWidth) }}
		{{ form_row(form.thumbBlockHeight) }}
		{{ form_row(form.thumbStreamWidth) }}
		{{ form_row(form.thumbStreamHeight) }}
		{{ form_row(form.streamWidth) }}
		{{ form_row(form.streamHeight) }}
		{{ form_row(form.streamsBlock) }}
		{{ form_row(form.favLang) }}
		<div class="form-group form-buttons">
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_widget(form.save) }}
                {{ form_widget(form.reset) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
